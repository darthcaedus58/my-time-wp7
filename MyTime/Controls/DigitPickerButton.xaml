<Button x:Class="Controls.DigitPickerButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Background="#FF4C4478"
    Foreground="{StaticResource PhoneBackgroundBrush}" 
    d:DesignHeight="120" d:DesignWidth="120">

    <Grid Background="#FF4C4478" x:Name="LayoutRoot">
        <StackPanel Background="#FF4C4478" Orientation="Vertical">
            <TextBlock Foreground="#FF8FCCF8" x:Name="tbValue" Style="{StaticResource PhoneTextExtraLargeStyle}" Text="0" />
            <TextBlock Foreground="#FFD2DA86" x:Name="tbLabel" Style="{StaticResource PhoneTextSmallStyle}" Text="Label" />
        </StackPanel>
    </Grid>
</Button>
